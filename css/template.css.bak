li
{
font-size:12pt;
margin-top: 10px;
margin-bottom: 0px;
text-align: justify;
}

/* Table */
table {
	border-collapse:collapse;
	margin-top: 1em;
	margin-bottom: 1em;
	padding: 10px;
	width:100%;
	font-size:12pt;
}
td {
	padding: 2px 1px 2px 75px;
}
th {
	padding: 2px 5px 2px 5px;
}

.border-bottom{
	border-bottom: 1px solid black;
}

sup
{
font-size:9pt;
}

figure {
  padding: 12px 0px 12px 0px;
  font-size:10pt;
  border: none;
  background: transparent;
  text-align: center;
  line-height: 1.2;

}

#abst01{
	border-bottom:solid 2px red;
	border-top:solid 2px red;
	margin: 50px 50px 50px 80px;

}

.partitle
{
	font-size: 16pt;
	font-style: normal;
	text-align: left;
	margin: 40px 0px 0px 4.5em;
	color: red;
}

.doi{
font-size:9pt;
	margin: 50px 50px 50px 80px;
	border-bottom:solid 1px red;

}

.resume{
	font-size: 12pt;
	font-weight: bold;
	font-style: normal;
	text-align: left;
	margin: 20px 0px 10px 0px;

}
.empty{
	border-bottom:solid 2px red;
	margin: 50px 50px 50px 80px;

}

